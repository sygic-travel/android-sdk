<?xml version="1.0" encoding="utf-8"?>
<resources>
	<!-- button styles -->
	<style name="blue_button_wide_style" parent="white_font_medium_style">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:background">@drawable/blue_button_rounded</item>
		<item name="android:foreground">?android:attr/selectableItemBackground</item>
		<item name="android:layout_marginLeft">@dimen/margin_lr_sygic_travel_button</item>
		<item name="android:layout_marginRight">@dimen/margin_lr_sygic_travel_button</item>
		<item name="android:padding">@dimen/padding_sygic_travel_button</item>
	</style>

	<style name="blue_button_style_marginless" parent="blue_button_wide_style">
		<item name="android:layout_marginLeft">0dp</item>
		<item name="android:layout_marginRight">0dp</item>
	</style>

	<style name="blue_button_style" parent="white_font_medium_style">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:background">@drawable/blue_button</item>
		<item name="android:paddingLeft">@dimen/padding_sygic_travel_button_large</item>
		<item name="android:paddingRight">@dimen/padding_sygic_travel_button_large</item>
	</style>
</resources>