<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/rl_gallery_photo_main"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@android:color/black"
	android:animateLayoutChanges="true"
	tools:context="com.tripomatic.ui.activity.gallery.photo.GalleryPhotoActivity">

	<android.support.v4.view.ViewPager
		android:id="@+id/vp_gallery"
		android:layout_width="match_parent"
		android:layout_height="match_parent"/>

	<LinearLayout
		android:id="@+id/ll_gallery_info"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_alignParentBottom="true"
		android:visibility="gone"
		android:animateLayoutChanges="true">

		<LinearLayout
			android:id="@+id/ll_gallery_photo_info"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:paddingLeft="16dp"
			android:paddingRight="16dp">

			<TextView
				android:id="@+id/tv_gallery_photo_title"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				style="@style/light_font_medium_with_black_aura_style"
				android:textStyle="bold"
				android:lines="2"
				android:ellipsize="end"/>

			<LinearLayout
				android:id="@+id/ll_gallery_photo_author"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

				<TextView
					android:id="@+id/tv_gallery_photo_author_label"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					style="@style/light_font_small_with_black_aura_style"
					android:text="@string/gallery_author_label"/>

				<TextView
					android:id="@+id/tv_gallery_photo_author"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					style="@style/light_font_small_with_black_aura_style"
					android:maxLines="1"
					android:ellipsize="end"
					android:clickable="true"
					android:padding="1dp"/>

			</LinearLayout>

			<LinearLayout
				android:id="@+id/ll_gallery_photo_source"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

				<TextView
					android:id="@+id/tv_gallery_photo_source_label"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					style="@style/light_font_small_with_black_aura_style"
					android:text="@string/gallery_source_label"/>

				<TextView
					android:id="@+id/tv_gallery_photo_source"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					style="@style/light_font_small_with_black_aura_style"
					android:maxLines="1"
					android:ellipsize="end"
					android:clickable="true"
					android:padding="1dp"/>

			</LinearLayout>

			<TextView
				android:id="@+id/tv_gallery_photo_licence"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				style="@style/light_font_small_with_black_aura_style"
				android:maxLines="1"
				android:ellipsize="end"
				android:clickable="true"
				android:padding="1dp"/>

		</LinearLayout>

		<com.tripomatic.ui.customView.PageCountIndicator
			android:id="@+id/pci_gallery_count_indicator"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingBottom="2dp"
			android:paddingTop="2dp"
			android:background="@android:color/black"
			custom:textColor="@android:color/white"/>

	</LinearLayout>

</RelativeLayout>
