<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:fresco="http://schemas.android.com/apk/res-auto"
	android:id="@+id/poi_card_item_layout"
	android:layout_gravity="center"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginLeft="@dimen/card_margin"
	android:layout_marginRight="@dimen/card_margin"
	android:layout_marginTop="@dimen/card_margin"
	android:clickable="true"
	style="@style/st_card_view_style"
	android:foreground="?android:attr/selectableItemBackground">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<com.facebook.drawee.view.SimpleDraweeView
			android:id="@+id/sdv_poi_photo"
			android:layout_width="match_parent"
			android:layout_height="@dimen/list_item"
			android:contentDescription="@string/cd_trip_image"
			android:background="@color/st_lighter_grey"

			fresco:fadeDuration="@integer/photo_fade_in_duration"
			fresco:roundedCornerRadius="2dp"
			fresco:roundBottomLeft="false"
			fresco:roundBottomRight="false"/>

		<View
			android:layout_alignBottom="@id/sdv_poi_photo"
			android:layout_width="match_parent"
			android:layout_height="100dp"
			android:background="@drawable/gradient_vertical_transparentdark_transparent"/>

		<LinearLayout
			android:id="@+id/ll_hotel_price_rating"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_alignBottom="@id/sdv_poi_photo"
			android:padding="16dp">

			<TextView
				android:id="@+id/tv_poi_price"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:singleLine="true"
				android:ellipsize="end"
				style="@style/white_font_small_medium_style"
				android:layout_weight="1"
				android:includeFontPadding="false"
				android:visibility="gone"
				android:shadowColor="@android:color/black"
				android:shadowDx="0.0"
				android:shadowDy="0.0"
				android:shadowRadius="25"/>

			<TextView
				android:id="@+id/tv_poi_preview_score"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:singleLine="true"
				android:gravity="end"
				style="@style/white_font_small_medium_style"
				android:ellipsize="end"
				android:layout_weight="1"
				android:includeFontPadding="false"
				android:visibility="gone"
				android:shadowColor="@android:color/black"
				android:shadowDx="0.0"
				android:shadowDy="0.0"
				android:shadowRadius="25"/>

		</LinearLayout>

		<LinearLayout
			android:id="@+id/ll_all_tags"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_alignBottom="@id/sdv_poi_photo"
			android:padding="16dp">

			<TextView
				android:id="@+id/tv_tag_popular"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				style="@style/white_font_micro_style"
				android:singleLine="true"
				android:text="@string/hotels_popular"
				android:background="@drawable/tag_green_border"
				android:textColor="@color/green_popular"
				android:layout_marginRight="3dp"
				android:paddingLeft="5dp"
				android:paddingRight="5dp"
				android:paddingTop="3dp"
				android:paddingBottom="3dp"
				android:visibility="gone"/>

		<LinearLayout
			android:id="@+id/ll_tags"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal"/>

		</LinearLayout>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingRight="16dp"
			android:layout_below="@id/sdv_poi_photo"
			android:background="@android:color/white">

			<LinearLayout
				android:id="@+id/ll_poi_text_layout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:paddingTop="12dp"
				android:paddingLeft="16dp"
				android:paddingBottom="12dp"
				android:layout_alignParentLeft="true"
				android:layout_toLeftOf="@+id/iv_poi_in_trip_or_favorite">


				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="horizontal">

					<TextView
						android:id="@+id/tv_poi_name"
						android:layout_height="wrap_content"
						style="@style/dark_font_medium_large_style"
						android:maxLines="1"
						android:ellipsize="end"
						android:includeFontPadding="false"
						android:layout_width="0dp"
						android:layout_weight="1"
						android:paddingRight="5dp"/>

					<!--TODO zmenit vzhled-->




					<LinearLayout
						android:id="@+id/ll_detail_hotel_rating"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:visibility="gone"
						/>

				</LinearLayout>

				<TextView
					android:id="@+id/tv_poi_description"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					style="@style/dark_font_small_style"
					android:singleLine="true"
					android:ellipsize="end"
					android:layout_marginTop="7dp"
					android:includeFontPadding="false"/>

			</LinearLayout>

			<ImageView
				android:id="@+id/iv_poi_in_trip_or_favorite"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:contentDescription="@string/cd_in_trip_or_favorite_list_item"
				android:padding="12dp"
				android:layout_marginTop="12dp"
				android:clickable="true"
				android:longClickable="true"
				android:visibility="gone"/>

		</RelativeLayout>
	</RelativeLayout>
</android.support.v7.widget.CardView>