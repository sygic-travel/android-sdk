<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:gravity="center">

		<NumberPicker
			android:id="@+id/value_picker"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:longClickable="false"
			android:layout_alignParentTop="true"
			android:layout_centerHorizontal="true"
			android:layout_marginLeft="20dp"
			android:layout_marginRight="20dp"/>

	<View
		android:id="@+id/value_picker_line"
		android:layout_width="match_parent"
		android:layout_height="1px"
		android:background="@color/activity_gray"
		android:layout_marginTop="15dp"
		android:layout_below="@+id/value_picker"/>

	<Button
		android:id="@+id/value_picker_done"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="@string/done"
		android:gravity="center"
		style="?android:attr/buttonBarButtonStyle"
		android:layout_below="@+id/value_picker_line"
		android:textAllCaps="false"/>

</RelativeLayout>