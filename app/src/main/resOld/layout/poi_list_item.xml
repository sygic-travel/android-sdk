<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:id="@+id/poi_list_item_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:paddingLeft="4dp"
    android:paddingTop="8dp">

    <RelativeLayout
        android:id="@+id/rl_poi_photo_layout"
        android:layout_width="@dimen/list_item"
        android:layout_height="@dimen/list_item"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
		android:padding="4dp">

        <FrameLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<TextView
				android:id="@+id/tv_marker_icon"
				android:background="@drawable/marker_icon_list_background"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:textColor="@color/white"
				android:includeFontPadding="false"
				android:gravity="center"/>

			<com.facebook.drawee.view.SimpleDraweeView
				android:id="@+id/sdv_poi_photo"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:contentDescription="@string/cd_activity_image"
				fresco:actualImageScaleType="centerCrop"
				fresco:fadeDuration="@integer/photo_fade_in_duration"
				fresco:roundAsCircle="true"/>

		</FrameLayout>

		<ImageView
            android:id="@+id/poi_in_trip_or_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="2dp"
            android:contentDescription="@string/cd_in_trip_or_favorite_list_item"
            android:visibility="gone"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_poi_text_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_toRightOf="@+id/rl_poi_photo_layout"
        android:gravity="center_vertical"
        android:minHeight="@dimen/list_item"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_poi_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/black_font_small_medium_style"
			android:layout_marginBottom="2dp"
			android:layout_marginTop="2dp"
            android:singleLine="true"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_poi_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/black_font_small_style"
            android:layout_marginBottom="2dp"
			android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:singleLine="true"/>

        <LinearLayout
			android:id="@+id/ll_tags_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:layout_marginBottom="2dp"
			android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_detail_hotel_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/white_font_micro_style"
                android:layout_marginRight="4dp"
                android:background="@drawable/tag_yellow"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:singleLine="true"
                android:drawablePadding="4dp"
                android:drawableRight="@drawable/white_star_rating"/>

            <include layout="@layout/tags_layout"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_poi_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/grey_font_small_style"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:singleLine="true"/>


    </LinearLayout>

    <View
        android:id="@+id/v_list_div"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ll_poi_text_layout"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/rl_poi_photo_layout"
        android:background="@color/activity_gray"/>

    <View
        android:id="@+id/v_list_drop_position_top"
        style="@style/drop_position_style"
        android:layout_alignParentTop="true"/>

    <View
        android:id="@+id/v_list_drop_position_bottom"
        style="@style/drop_position_style"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>