<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:gravity="center">

	<LinearLayout
		android:id="@+id/number_picker_pickers"
		android:orientation="horizontal"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true"
		android:layout_marginLeft="20dp"
		android:layout_marginRight="20dp">

		<NumberPicker
			android:id="@+id/number_picker_from"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:longClickable="false"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="-"
			android:textColor="@android:color/holo_blue_light"
			android:textSize="50sp"
			android:layout_gravity="center_vertical"
			android:layout_margin="20dp"/>

		<NumberPicker
			android:id="@+id/number_picker_to"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:longClickable="false"/>

	</LinearLayout>

	<View
		android:id="@+id/number_picker_line"
		android:layout_width="match_parent"
		android:layout_height="1px"
		android:background="@color/activity_gray"
		android:layout_marginTop="15dp"
		android:layout_below="@+id/number_picker_pickers"/>

	<Button
		android:id="@+id/number_picker_done"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="@string/done"
		android:gravity="center"
		style="?android:attr/buttonBarButtonStyle"
		android:layout_below="@+id/number_picker_line"
		android:textAllCaps="false"/>

</RelativeLayout>