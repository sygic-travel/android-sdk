<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
	xmlns:android="http://schemas.android.com/apk/res/android">

	<PreferenceCategory
		android:title="@string/pref_group_units"
		android:key="pref_key_units_settings">

		<ListPreference
			android:key="@string/pref_distance_key"
			android:title="@string/pref_distance_unit"
			android:dialogTitle="@string/pref_distance_unit_dialog_title"
			android:entries="@array/pref_array_destination_unit"
			android:entryValues="@array/pref_array_destination_unit_ev"/>

		<ListPreference
			android:key="@string/pref_temperature_key"
			android:title="@string/pref_temperature_unit"
			android:dialogTitle="@string/pref_temperature_unit_dialog_title"
			android:entries="@array/pref_array_temperature_unit"
			android:entryValues="@array/pref_array_temperature_unit_ev"/>

		<ListPreference
			android:key="@string/pref_navigation_key"
			android:title="@string/pref_navigation_unit"
			android:dialogTitle="@string/pref_navigation_unit_dialog_title"
			android:entries="@array/pref_array_navigation_unit"
			android:entryValues="@array/pref_array_navigation_unit_ev"/>

		<ListPreference
			android:key="@string/pref_currency_key"
			android:title="@string/pref_currency_unit"
			android:dialogTitle="@string/pref_currency_unit_dialog_title"
			android:entries="@array/pref_array_currency"
			android:entryValues="@array/pref_array_currency_unit"/>
	</PreferenceCategory>
</PreferenceScreen>