<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<RelativeLayout
		android:id="@+id/rl_detail_reviews"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"

		android:clickable="true"
		android:visibility="gone"
		android:padding="16dp"
		android:background="?android:attr/selectableItemBackground">

		<TextView
			android:id="@+id/tv_detail_bookable_rating"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			style="@style/black_font_medium_style"
			android:textStyle="bold"
			android:drawableLeft="@drawable/detail_rate"
			android:drawablePadding="5dp"
			android:gravity="center_vertical"
			android:layout_centerVertical="true"/>

		<TextView
			android:id="@+id/tv_detail_reviews_count"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			style="@style/black_font_medium_style"
			android:layout_centerVertical="true"
			android:drawablePadding="10dp"/>

	</RelativeLayout>

	<Button
		android:id="@+id/btn_buy_now"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="16dp"
		style="@style/blue_button_style"
		android:text="@string/detail_buy_now"/>

	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="@color/item_detail_divider"/>

</LinearLayout>