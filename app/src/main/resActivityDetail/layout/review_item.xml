<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:id="@+id/review_item_layout"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:padding="@dimen/activity_detail_padding"
	android:clickable="false">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<TextView
			android:id="@+id/review_item_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			style="@style/black_font_activity_detail"
			android:textStyle="bold"/>

		<TextView
			android:id="@+id/review_item_date"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			style="@style/black_font_activity_detail"
			android:textStyle="italic"/>

	</RelativeLayout>

	<TextView
		android:id="@+id/review_item_review"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		style="@style/black_font_activity_detail"/>

</LinearLayout>