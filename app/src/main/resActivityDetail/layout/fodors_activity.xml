<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<include layout="@layout/toolbar"/>

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">


		<com.tripomatic.utilities.views.DisableableScrollView
			android:id="@+id/sv_content_wrapper"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:visibility="gone">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">

				<TextView
					android:id="@+id/tv_fodors_content"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:lineSpacingMultiplier="1.5"
					android:textSize="@dimen/text_size_small_medium"
					android:padding="16dp"/>

				<LinearLayout
					android:id="@+id/ll_fodors_atribution"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:paddingLeft="16dp"
					android:paddingRight="16dp"
					android:layout_marginBottom="16dp">


					<ImageView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:src="@drawable/fodors_logo"
						android:layout_marginBottom="16dp"/>

					<TextView
						android:id="@+id/tv_detail_fodors_attribution"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						style="@style/black_font_small_style"
						android:gravity="left"
						android:visibility="visible"
						android:text="@string/copyright_fodors"/>

			</LinearLayout>

			</LinearLayout>



		</com.tripomatic.utilities.views.DisableableScrollView>

		<LinearLayout
			android:id="@+id/ll_fodor_not_available"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:visibility="gone"
			android:orientation="vertical">

			<View
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="1"
				android:background="@drawable/fodors_unavailable_alpha"/>


			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="2"
				android:background="@color/white"
				android:gravity="center"
				android:orientation="vertical">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="0dp"
					android:layout_weight="1"
					android:padding="16dp"
					android:layout_gravity="bottom"
					android:gravity="center"
					android:orientation="vertical">

					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center"
						android:textSize="@dimen/text_size_medium"
						android:paddingBottom="16dp"
						android:text="@string/fodors_unavailable"/>

					<Button
						android:id="@+id/btn_get_premium"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						style="@style/blue_button_style"
						android:text="@string/premium_button_get_premium"/>

				</LinearLayout>

			</LinearLayout>

		</LinearLayout>

	</FrameLayout>

</LinearLayout>